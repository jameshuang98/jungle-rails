<h1>Signup!</h1>

<table>
  <%= form_for :user, url: '/users' do |f| %>

    <tr> <td>Name: <%= f.text_field :name %> </td> </tr>
    <tr> <td>Email: <%= f.text_field :email %> </td> </tr>
    <tr> <td>  Password: <%= f.password_field :password %> </td> </tr>
    <tr> <td> Password Confirmation: <%= f.password_field :password_confirmation %> </td> </tr>
    <tr> <td> <%= f.submit "Submit" %> </td> </tr>

  <% end %>
</table>
